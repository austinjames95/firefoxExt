{
  "manifest_version": 2,
  "name": "PDF Math Overlay",
  "version": "1.0",
  "description": "View PDFs with overlaid LaTeX math equations",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "vendor/pdfjs/pdf.worker.js",
    "vendor/katex/fonts/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "PDF Math Overlay"
  }
}
